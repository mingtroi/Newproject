<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f4f6f8;
        }

        .admin-sidebar {
            background-color: #1f2937;
            height: 100vh;
            padding: 1rem;
            position: fixed;
            width: 230px;
        }

            .admin-sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                margin-bottom: 1rem;
            }

        .main-admin-content {
            margin-left: 240px;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Admin Sidebar -->
        <div class="admin-sidebar">
            <h4 class="text-white">Admin Panel</h4>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Department" asp-action="List">Departments</a>
            <a asp-controller="Employee" asp-action="List">Users</a>
            <a asp-controller="Salary" asp-action="Manage">Salaries</a>
            <a asp-controller="Notification" asp-action="Index">Notification</a>
            <a asp-controller="FeedBack" asp-action="List">FeedBack</a>
            <a asp-controller="Admin" asp-action="LogOut" style="color:red;">SignOut</a>
        </div>

        <!-- Main content -->
        <div class="main-admin-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
